{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debugar Projeto (g++)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/bin/main",
        "args": [],
        "stopAtEntry": true,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Habilitar impress√£o de valores para gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          },
          {
            "description": "Definir desmontagem para Intel",
            "text": "-gdb-set disassembly-flavor intel",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "Compilar Projeto",
        "miDebuggerPath": "/usr/bin/gdb"
      }
    ]
  }